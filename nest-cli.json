{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-workshop/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestjs-workshop/tsconfig.app.json"
  },
  "projects": {
    "cacheable": {
      "type": "library",
      "root": "libs/cacheable",
      "entryFile": "index",
      "sourceRoot": "libs/cacheable/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cacheable/tsconfig.lib.json"
      }
    },
    "nestjs-workshop": {
      "type": "application",
      "root": "apps/nestjs-workshop",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-workshop/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-workshop/tsconfig.app.json"
      }
    },
    "cacheable-demo": {
      "type": "application",
      "root": "apps/cacheable-demo",
      "entryFile": "main",
      "sourceRoot": "apps/cacheable-demo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cacheable-demo/tsconfig.app.json"
      }
    },
    "exception-filter": {
      "type": "library",
      "root": "libs/exception-filter",
      "entryFile": "index",
      "sourceRoot": "libs/exception-filter/src",
      "compilerOptions": {
        "tsConfigPath": "libs/exception-filter/tsconfig.lib.json"
      }
    },
    "global-exception-handler-demo": {
      "type": "application",
      "root": "apps/global-exception-handler-demo",
      "entryFile": "main",
      "sourceRoot": "apps/global-exception-handler-demo/src",
      "compilerOptions": {
        "tsConfigPath": "apps/global-exception-handler-demo/tsconfig.app.json"
      }
    },
    "clean-architecture": {
      "type": "application",
      "root": "apps/clean-architecture",
      "entryFile": "main",
      "sourceRoot": "apps/clean-architecture/src",
      "compilerOptions": {
        "tsConfigPath": "apps/clean-architecture/tsconfig.app.json"
      }
    },
    "toolkit": {
      "type": "library",
      "root": "libs/toolkit",
      "entryFile": "index",
      "sourceRoot": "libs/toolkit/src",
      "compilerOptions": {
        "tsConfigPath": "libs/toolkit/tsconfig.lib.json"
      }
    },
    "buckpal-prisma-schema": {
      "type": "library",
      "root": "libs/buckpal-prisma-schema",
      "entryFile": "index",
      "sourceRoot": "libs/buckpal-prisma-schema/src",
      "compilerOptions": {
        "tsConfigPath": "libs/buckpal-prisma-schema/tsconfig.lib.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/nestjs-workshop"
}